{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"website",
      "labels":{
         "name":"website"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "name":"website"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"website"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"website",
                  "image":"gcr.io/subscribers-1072/website-node",
                  "ports":[
                     {
                        "containerPort":8080
                     }
                  ],
                  "env":[
                     {
                        "name": "SERVICES_URL",
                        "value": "http://104.197.141.51/subscriber"
                     }
                  ]
               }
            ]
         }
      }
   }
}